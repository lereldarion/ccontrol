obj-m = ccontrol.o
EXTRA_CFLAGS += -I@abs_top_srcdir@/src/common/
M=$(shell pwd)
all: module

module:
	make -C /lib/modules/$(shell uname -r)/build/ M=$(M) modules

clean:
	make -C /lib/modules/$(shell uname -r)/build/ M=$(M) clean
install:
	make -C /lib/modules/$(shell uname -r)/build/ M=$(M) modules_install

check: all
	exit 0
